{
  "name": "your-vendor/ai-agent",
  "description": "WordPress AI Agent plugin foundation",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "autoload": {
    "psr-4": {
      "AIAgent\\": "src/"
    }
  },
  "require": {
    "woocommerce/action-scheduler": "^3.7"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.11",
    "squizlabs/php_codesniffer": "^3.10",
    "phpunit/phpunit": "^9.6",
    "php-stubs/wordpress-stubs": "^6.5",
    "vimeo/psalm": "^5.0",
    "brain/monkey": "^2.6"
  },
  "scripts": {
    "lint": [
      "@phpcs"
    ],
    "phpcs": "phpcs -q --standard=phpcs.xml.dist --extensions=php,inc --report=full --runtime-set ignore_warnings_on_exit 1",
    "phpstan": "phpstan analyse -c phpstan.neon.dist --no-progress",
    "psalm": "psalm --config=psalm.xml --no-progress",
    "test": "phpunit -c phpunit.xml.dist",
    "test-coverage": "phpunit -c phpunit.xml.dist --coverage-html coverage --coverage-clover coverage.xml",
    "test-performance": "phpunit -c phpunit.xml.dist --group performance",
    "cs-fix": "phpcbf --standard=phpcs.xml.dist --extensions=php,inc",
    "security-scan": "composer audit"
  }
}